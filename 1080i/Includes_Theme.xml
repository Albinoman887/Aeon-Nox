<includes>
  <include name="Topbar">
    <posx>0</posx>
    <width>1920</width>
    <height>40</height>
    <colordiffuse>$INFO[Skin.String(diffuse_bar)]</colordiffuse>
  </include>
  <include name="Neon_Topbar">
    <control type="image">
      <posy>22</posy>
      <include>Topbar</include>
      <texture>common/topbar_left.png</texture>
      <include>TopbarPulseAnimationLeft</include>
    </control>
    <control type="image">
      <posy>22</posy>
      <include>Topbar</include>
      <texture>common/topbar_right.png</texture>
      <include>TopbarPulseAnimationRight</include>
    </control>
  </include>
  <include name="Neon_VerticalBar">
    <control type="image">
      <posy>0</posy>
      <posx>0</posx>
      <width>40</width>
      <height>1080</height>
      <colordiffuse>$INFO[Skin.String(diffuse_bar)]</colordiffuse>
      <texture>common/topbar_top.png</texture>
      <include>TopbarPulseAnimationLeft</include>
    </control>
    <control type="image">
      <posy>0</posy>
      <posx>0</posx>
      <width>40</width>
      <height>1080</height>
      <colordiffuse>$INFO[Skin.String(diffuse_bar)]</colordiffuse>
      <texture>common/topbar_down.png</texture>
      <include>TopbarPulseAnimationRight</include>
    </control>
  </include>
  <include name="Neon_VerticalBarInfoScreen">
    <control type="group">
      <posx>709</posx>
      <posy>0</posy>
      <animation effect="fade" start="100" end="80" time="400">WindowOpen</animation>
      <include>Neon_VerticalBar</include>
    </control>
  </include>
  <include name="Neon_Floor">
    <control type="image">
      <posy>854</posy>
      <include>Topbar</include>
      <texture>common/topbar_left.png</texture>
      <include>TopbarPulseAnimationLeft</include>
    </control>
    <control type="image">
      <posy>854</posy>
      <include>Topbar</include>
      <texture>common/topbar_right.png</texture>
      <include>TopbarPulseAnimationRight</include>
    </control>
  </include>
  <include name="Neon_LowList">
    <control type="image">
      <posy>735</posy>
      <include>Topbar</include>
      <texture>common/topbar_left.png</texture>
      <include>Animation_CommonFade</include>
      <include>TopbarPulseAnimationLeft</include>
    </control>
    <control type="image">
      <posy>735</posy>
      <include>Topbar</include>
      <texture>common/topbar_right.png</texture>
      <include>Animation_CommonFade</include>
      <include>TopbarPulseAnimationRight</include>
    </control>
  </include>
  <include name="Neon_Home">
    <control type="group">
      <visible>Skin.HasSetting(NeonBars)</visible>
      <control type="image">
        <posy>494</posy>
        <include>Topbar</include>
        <texture>common/topbar_left.png</texture>
        <include>Animation_CommonFade</include>
        <include>TopbarPulseAnimationLeft</include>
      </control>
      <control type="image">
        <posy>494</posy>
        <include>Topbar</include>
        <texture>common/topbar_right.png</texture>
        <include>Animation_CommonFade</include>
        <include>TopbarPulseAnimationRight</include>
      </control>
      <control type="image">
        <posy>590</posy>
        <include>Topbar</include>
        <texture>common/topbar_left.png</texture>
        <include>Animation_CommonFade</include>
        <include>TopbarPulseAnimationLeft</include>
      </control>
      <control type="image">
        <posy>590</posy>
        <include>Topbar</include>
        <texture>common/topbar_right.png</texture>
        <include>Animation_CommonFade</include>
        <include>TopbarPulseAnimationRight</include>
      </control>
    </control>
  </include>
</includes>