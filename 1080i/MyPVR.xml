<window id="600">
  <defaultcontrol>32</defaultcontrol>
  <allowoverlay>no</allowoverlay>
  <onload>Skin.SetString(diffuse_bar,$INFO[Skin.String(diffuse_PVR)])</onload>
  <onload condition="Skin.HasSetting(colortext)">Skin.SetString(diffuse_text,$INFO[Skin.String(diffuse_PVR)])</onload>
  <onload condition="!Skin.HasSetting(colortext)">Skin.SetString(diffuse_text,grey)</onload>
  <controls>
    <include>CommonLiveTVBackground</include>
    <include>Furniture_Showcase</include>
    <control type="group">
      <visible>!Control.IsVisible(11) + !Control.IsVisible(12) + Control.IsVisible(13) + Control.IsVisible(10) + Control.IsVisible(14) + Control.IsVisible(15) + Control.IsVisible(16) + Control.IsVisible(17)</visible>
      <control type="visualisation">
        <posx>0</posx>
        <posy>0</posy>
        <width>1920</width>
        <height>1080</height>
        <visible>Player.HasAudio + !Skin.HasSetting(ShowBackgroundVis)</visible>
      </control>
      <control type="videowindow">
        <posx>0</posx>
        <posy>0</posy>
        <width>1920</width>
        <height>1080</height>
        <visible>Player.HasVideo + !Skin.HasSetting(ShowBackgroundVideo)</visible>
      </control>
    </control>
    <control type="group">
      <include>Animation_OpenCloseZoom_New</include>
      <control type="group">
        <include>VisibleFadeEffect</include>
        <visible>Control.IsVisible(10) | Control.IsVisible(11) | Control.IsVisible(12) | Control.IsVisible(13) | Control.IsVisible(14) | Control.IsVisible(15) | Control.IsVisible(16) | Control.IsVisible(17)</visible>
        <control type="image">
          <posx>45</posx>
          <posy>38</posy>
          <width>1830</width>
          <height>1068</height>
          <texture>wall/wall_bg.png</texture>
        </control>
        <control type="image">
          <posx>45</posx>
          <posy>38</posy>
          <width>1830</width>
          <height>1068</height>
          <texture>wall/wall_bg_reflection.png</texture>
        </control>
      </control>
    </control>
    <control type="group">
      <description>Small Media Window</description>
      <posx>63</posx>
      <posy>120</posy>
      <visible>Control.IsVisible(11) | Control.IsVisible(12) | Control.IsVisible(13)</visible>
      <include>VisibleFadeEffect</include>
      <include>Animation_OpenCloseZoom_New</include>
      <control type="image">
        <posx>-3</posx>
        <posy>-12</posy>
        <width>922</width>
        <height>478</height>
        <texture border="8">PVR/Border.png</texture>
      </control>
      <control type="image">
        <posx>62</posx>
        <posy>8</posy>
        <width>796</width>
        <height>442</height>
        <texture fallback="special://skin/backgrounds/fallback_livetv.jpg">$INFO[Skin.String(Home_Custom_Back_LiveTV_Folder)]</texture>
        <include>VisibleFadeEffect</include>
        <visible>!Player.HasVideo + Control.IsVisible(11)</visible>
      </control>
      <control type="image">
        <posx>62</posx>
        <posy>8</posy>
        <width>796</width>
        <height>442</height>
        <texture fallback="special://skin/backgrounds/fallback_radio.jpg">$INFO[Skin.String(Home_Custom_Back_LiveTV_Folder)]</texture>
        <include>VisibleFadeEffect</include>
        <visible>!Player.HasVideo + Control.IsVisible(12)</visible>
      </control>
      <control type="image">
        <posx>62</posx>
        <posy>8</posy>
        <width>796</width>
        <height>442</height>
        <texture fallback="special://skin/backgrounds/fallback_record.jpg">$INFO[Skin.String(Home_Custom_Back_LiveTV_Folder)]</texture>
        <include>VisibleFadeEffect</include>
        <visible>!Player.HasVideo + Control.IsVisible(13)</visible>
      </control>
      <control type="videowindow">
        <posx>62</posx>
        <posy>-6</posy>
        <width>795</width>
        <height>465</height>
        <visible>Player.HasVideo</visible>
        <animation effect="slide" start="0,0" end="-3000,0" time="0">WindowClose</animation>
      </control>
    </control>

    <control type="group">
      <posx>40</posx>
      <posy>450</posy>
      <include>Animation_OpenCloseZoom_New</include>
      <visible>Control.IsVisible(11) | Control.IsVisible(12)</visible>
      <include>VisibleFadeEffect</include>
      <control type="label">
        <posx>87</posx>
        <posy>225</posy>
        <width>800</width>
        <height>30</height>
        <font>Font_Reg22</font>
        <textcolor>white</textcolor>
        <align>center</align>
        <aligny>center</aligny>
        <label>[UPPERCASE][B]$INFO[Container.ListItem.Title][/B][/UPPERCASE]</label>
        <scroll>yes</scroll>
      </control>
      <control type="label">
        <posx>87</posx>
        <posy>180</posy>
        <width>800</width>
        <height>30</height>
        <font>Font_Reg16</font>
        <textcolor>white</textcolor>
        <align>center</align>
        <aligny>center</aligny>
        <visible>Container.ListItem.HasEpg</visible>
        <label>[B]$INFO[Container.ListItem.StartTime,, / ]$INFO[Container.ListItem.EndTime][/B]</label>
      </control>
      <control type="progress">
        <description>Progressbar</description>
        <posx>74</posx>
        <posy>148</posy>
        <width>818</width>
        <height>21</height>
        <colordiffuse>$INFO[Skin.String(diffuse_bar)]</colordiffuse>
        <texturebg border="12,0,12,0">dialogs/progress/progress_back.png</texturebg>
        <lefttexture border="12,0,0,0">dialogs/progress/progress_left.png</lefttexture>
        <midtexture border="12,0,12,0">dialogs/progress/progress_mid.png</midtexture>
        <righttexture border="0,0,12,0">dialogs/progress/progress_right.png</righttexture>
        <visible>Container.ListItem.HasEpg</visible>
        <info>Container.ListItem.Progress</info>
      </control>
      <control type="textbox">
        <description>Plot Value for TVShow</description>
        <posx>80</posx>
        <posy>278</posy>
        <width>810</width>
        <height>192</height>
        <font>Font_Reg18</font>
        <align>justify</align>
        <textcolor>white</textcolor>
        <shadowcolor>black</shadowcolor>
        <pagecontrol>-</pagecontrol>
        <label>$INFO[Container.ListItem.Plot]</label>
        <autoscroll time="2000" delay="3000" repeat="5000">true</autoscroll>
      </control>
    </control>


    <control type="group" id="50">
      <include>Animation_OpenCloseZoom_New</include>
      <include>EPGTimelineView</include><!-- view id = 10 -->
      <include condition="!Skin.HasSetting(livetvsquare)">LiveTVChannelView</include><!-- view id = 11+12 -->
      <include condition="Skin.HasSetting(livetvsquare)">LiveTVChannelViewSquare</include>
      <include>LiveTVRecordingsView</include><!-- view id = 13 -->
      <include>LiveTVTimersView</include><!-- view id = 14 -->
      <include>LiveTVGuideChannelView</include><!-- view id = 15 -->
      <include>LiveTVGuideNowNextView</include><!-- view id = 16 -->
      <include>LiveTVSearchView</include><!-- view id = 17 -->
    </control>
    <control type="group">
      <include>CommonNowPlaying_Controls</include>
    </control>
    <control type="group">
      <description>Breadcrumbs</description>
      <include>Animation_HideBreadCrumbs</include>
      <include>Breadcrumbs_BackBar</include>
      <control type="group">
        <control type="grouplist">
          <posx>22</posx>
          <posy>0</posy>
          <width>750</width>
          <align>left</align>
          <visible>!Skin.HasSetting(GlobalRSS)</visible>
          <visible>![Player.HasMedia + !Skin.HasSetting(GlobalNowPlaying)]</visible>
          <itemgap>0</itemgap>
          <orientation>horizontal</orientation>
          <control type="image">
            <description>TV Icon</description>
            <posx>0</posx>
            <posy>0</posy>
            <width>54</width>
            <height>38</height>
            <aspectratio>keep</aspectratio>
            <texture>PVR/TVIcon.png</texture>
            <colordiffuse>bclabel</colordiffuse>
            <animation effect="slide" start="0,0" end="-9,0" time="0" condition="true">Conditional</animation>
          </control>
          <control type="label">
            <include>BreadcrumbsLabel</include>
            <label>$LOCALIZE[52502]</label>
          </control>
          <control type="label">
            <include>BreadcrumbsLabel</include>
            <label>$INFO[Container.FolderName, / ]</label>
            <include>BreadcrumbsLabel</include>
          </control>
        </control>
      </control>
      <control type="grouplist">
        <posx>0</posx>
        <posy>0</posy>
        <width>1920</width>
        <align>center</align>
        <aligny>center</aligny>
        <itemgap>15</itemgap>
        <visible>!IsEmpty(Container(11).NumItems)</visible>
        <visible>!Control.IsVisible(10)</visible>
        <orientation>horizontal</orientation>
        <animation effect="fade" time="400" delay="400">Visible</animation>
        <animation effect="fade" time="400">Hidden</animation>
        <control type="image">
          <description>Items Icon</description>
          <posx>0</posx>
          <posy>0</posy>
          <width>34</width>
          <height>42</height>
          <aspectratio>keep</aspectratio>
          <texture>breadcrumbs/items.png</texture>
          <colordiffuse>bcicon</colordiffuse>
          <include>dialogeffect</include>
          <animation effect="slide" start="0,0" end="0,-2" time="0" condition="true">Conditional</animation>
        </control>
        <control type="label">
          <include>BreadcrumbsLabel</include>
          <label>$INFO[Container(11).NumItems] Items</label>
          <visible>Control.IsVisible(11)</visible>
        </control>
        <control type="label">
          <include>BreadcrumbsLabel</include>
          <label>$INFO[Container(12).NumItems] Items</label>
          <visible>Control.IsVisible(12)</visible>
        </control>
        <control type="label">
          <posx>0</posx>
          <posy>0</posy>
          <height>33</height>
          <aligny>center</aligny>
          <width min="15" max="1920">auto</width>
          <include>BreadcrumbsLabel</include>
          <label>$INFO[Container(13).NumItems] Items</label>
          <visible>Control.IsVisible(13)</visible>
        </control>
        <control type="label">
          <include>BreadcrumbsLabel</include>
          <label>$INFO[Container(14).NumItems] Items</label>
          <visible>Control.IsVisible(14)</visible>
        </control>
        <control type="label">
          <include>BreadcrumbsLabel</include>
          <label>$INFO[Container(17).NumItems] Items</label>
          <visible>Control.IsVisible(17)</visible>
        </control>
        <control type="label">
          <include>BreadcrumbsLabel</include>
          <label>$INFO[Container(15).NumItems] Items</label>
          <visible>Control.IsVisible(15)</visible>
        </control>
        <control type="label">
          <include>BreadcrumbsLabel</include>
          <label>$INFO[Container(16).NumItems] Items</label>
          <visible>Control.IsVisible(16)</visible>
        </control>
        <control type="image">
          <description>Items Icon</description>
          <posx>0</posx>
          <posy>0</posy>
          <width>34</width>
          <height>42</height>
          <aspectratio>keep</aspectratio>
          <texture>breadcrumbs/pages.png</texture>
          <colordiffuse>bcicon</colordiffuse>
          <include>dialogeffect</include>
          <animation effect="slide" start="0,0" end="0,-3" time="0" condition="true">Conditional</animation>
        </control>
        <control type="label">
          <include>BreadcrumbsLabel</include>
          <label>$INFO[Container(11).CurrentPage,$LOCALIZE[31024] ]$INFO[Container(11).NumPages,/]</label>
          <visible>Control.IsVisible(11)</visible>
        </control>
        <control type="label">
          <include>BreadcrumbsLabel</include>
          <label>$INFO[Container(12).CurrentPage,$LOCALIZE[31024] ]$INFO[Container(12).NumPages,/]</label>
          <visible>Control.IsVisible(12)</visible>
        </control>
        <control type="label">
          <include>BreadcrumbsLabel</include>
          <label>$INFO[Container(13).CurrentPage,$LOCALIZE[31024] ]$INFO[Container(13).NumPages,/]</label>
          <visible>Control.IsVisible(13)</visible>
        </control>
        <control type="label">
          <include>BreadcrumbsLabel</include>
          <label>$INFO[Container(14).CurrentPage,$LOCALIZE[31024] ]$INFO[Container(14).NumPages,/]</label>
          <visible>Control.IsVisible(14)</visible>
        </control>
        <control type="label">
          <include>BreadcrumbsLabel</include>
          <label>$INFO[Container(15).CurrentPage,$LOCALIZE[31024] ]$INFO[Container(15).NumPages,/]</label>
          <visible>Control.IsVisible(15)</visible>
        </control>
        <control type="label">
          <include>BreadcrumbsLabel</include>
          <label>$INFO[Container(16).CurrentPage,$LOCALIZE[31024] ]$INFO[Container(16).NumPages,/]</label>
          <visible>Control.IsVisible(16)</visible>
        </control>
        <control type="label">
          <include>BreadcrumbsLabel</include>
          <label>$INFO[Container(17).CurrentPage,$LOCALIZE[31024] ]$INFO[Container(17).NumPages,/]</label>
          <visible>Control.IsVisible(17)</visible>
        </control>
      </control>
      <control type="group">
        <description>Clock + Date and Time</description>
        <animation effect="slide" start="0" end="-60" time="200" tween="quadratic" easing="out" condition="Window.IsActive(mutebug)">Conditional</animation>
        <control type="grouplist">
          <visible>true</visible>
          <posx>0</posx>
          <posy>0</posy>
          <width>1882</width>
          <align>right</align>
          <aligny>center</aligny>
          <orientation>horizontal</orientation>
          <control type="label">
            <posx>0</posx>
            <posy>0</posy>
            <height>38</height>
            <aligny>center</aligny>
            <width min="15" max="1920">auto</width>
            <font>Font_Reg17_Caps</font>
            <textcolor>bclabel</textcolor>
            <shadowcolor>bcshadow</shadowcolor>
            <scroll>false</scroll>
            <align>left</align>
            <label>[COLOR time]$INFO[System.Date]  |  [/COLOR][COLOR=bclabel]$INFO[System.Time][/COLOR]       </label>
          </control>
        </control>
        <control type="group">
          <!--clock-->
          <posx>1860</posx>
          <posy>0</posy>
          <width>39</width>
          <height>39</height>
          <control type="image">
            <description>Clock Icon</description>
            <posx>0</posx>
            <posy>0</posy>
            <width>39</width>
            <height>39</height>
            <colordiffuse>clock</colordiffuse>
            <texture>breadcrumbs/clock/clock_panel.png</texture>
          </control>
          <control type="image">
            <description>Clock Second</description>
            <posx>0</posx>
            <posy>0</posy>
            <width>39</width>
            <height>39</height>
            <colordiffuse>clock</colordiffuse>
            <texture>breadcrumbs/clock/seconds/$INFO[System.Time(ss)].png</texture>
          </control>
          <control type="image">
            <description>Clock Minute</description>
            <posx>0</posx>
            <posy>0</posy>
            <width>39</width>
            <height>39</height>
            <colordiffuse>clock</colordiffuse>
            <texture>breadcrumbs/clock/minutes/$INFO[System.Time(mm)].png</texture>
          </control>
          <control type="image">
            <description>Clock Hour</description>
            <posx>0</posx>
            <posy>0</posy>
            <width>39</width>
            <height>39</height>
            <colordiffuse>clock</colordiffuse>
            <texture>breadcrumbs/clock/hours/$INFO[System.Time(hh)].png</texture>
          </control>
          <control type="image">
            <description>Clock Cap</description>
            <posx>0</posx>
            <posy>0</posy>
            <width>39</width>
            <height>39</height>
            <colordiffuse>clock</colordiffuse>
            <texture>breadcrumbs/clock/clock_cap.png</texture>
          </control>
        </control>
      </control>
    </control>
    <include>Furniture_DarkGradient</include>
    <include>Furniture_NowPlayingWidget_PVR</include>
    <include condition="!Skin.HasSetting(kioskmode)">Media_Menu</include>
  </controls>
</window>
